@model Quizz.ViewModel.CategoryViewModel

@{
    ViewBag.Title = "Edit";
}


@using(Html.BeginForm("DisplayQuestion", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="width: 400px ;margin: 15% auto">
        <h4>Select Category</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CategoryId, Model.ListOfCagtegory, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Get" class="btn btn-primary"  />
            </div>
        </div>

    </div>
}

