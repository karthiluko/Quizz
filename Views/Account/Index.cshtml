<style type="text/css">

    .Login-form {
        width: 375px;
        margin: 10% auto;
        color: black;
        background-color: white;
        border: 1px solid black;
        border-radius: 10px;
    }

    .Login-form legend {
        width: 100%;
        font-size: 25px;
        text-align: center;
        padding-bottom: 15px;
        margin: 20px 0;
        color: black;
    }

    .Login-form label{
        font-size: 15px;
        margin: 5px 20px;
        padding: 2px 5px;
    }

    .Login-form input{
        border-radius: 25px;
        margin-left: 20px;
        margin-top: 1px;
        margin-right: 20px;
        padding: 5px 10px;
    }

        .Login-form span {
            margin: 2px 20px;
            padding: 5px;
        }

    @@media (max-width:767px){
        .Login-form {
            margin: 10% auto;
            width: 350px;
        }
    }
    @@media (max-width:482px) {
        .Login-form {
            margin: 5% auto;
            width: 320px;
        }
    }
</style>
 
<div>
    <section>
        <fieldset class="Login-form">
            @using (Html.BeginForm("Index", "Account", FormMethod.Post))
            {
                <legend><b> Login </b></legend>
                <div class="container">
                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName)
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", autocomplete = "off", @placeholder = "User Name", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserPassword)
                        @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control", @placeholder = "Password", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.UserPassword, null, new { @class = "text text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" name="Login" class="btn btn-primary" />
                    </div>
                </div>
            }
        </fieldset>
    </section>
</div>